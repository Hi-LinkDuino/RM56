import("//build/ohos.gni")
import("//build/test.gni")
import("//drivers/adapter/uhdf2/uhdf.gni")

module_output_path = "hdf/thermal"

ohos_unittest("hdi_unittest_thermal") {
  module_out_path = module_output_path

  include_dirs = [
    "//drivers/peripheral/thermal/interfaces",
    "//drivers/peripheral/thermal/interfaces/include/",
  ]

  sources = [ "./hdf_thermal_hdi_test.cpp" ]

  cflags = [
    "-Wall",
    "-Wextra",
    "-Werror",
    "-fsigned-char",
    "-fno-common",
    "-fno-strict-aliasing",
  ]

  if (is_standard_system) {
    external_deps = [
      "device_driver_framework:libhdf_utils",
      "hiviewdfx_hilog_native:libhilog",
      "ipc:ipc_single",
      "thermal_device_driver:libthermal_callback",
      "thermal_device_driver:libthermal_proxy_1.0",
      "utils_base:utils",
    ]
  } else {
    external_deps = [ "hilog:libhilog" ]
  }
}
