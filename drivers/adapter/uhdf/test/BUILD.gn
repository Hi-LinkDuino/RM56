import("//build/lite/config/component/lite_component.gni")
import("//build/lite/config/test.gni")

lite_component("hdf_test_uhdf") {
  # add hdf subsystem unittest
  if (ohos_build_type == "debug") {
    deps = [
      "//drivers/adapter/uhdf/test/unittest/config:hdf_adapter_uhdf_test_config",
      "//drivers/adapter/uhdf/test/unittest/manager:hdf_adapter_uhdf_test_door",
      "//drivers/adapter/uhdf/test/unittest/manager:hdf_adapter_uhdf_test_ioservice",
      "//drivers/adapter/uhdf/test/unittest/manager:hdf_adapter_uhdf_test_manager",
      "//drivers/adapter/uhdf/test/unittest/manager:hdf_adapter_uhdf_test_pm",
      "//drivers/adapter/uhdf/test/unittest/manager:hdf_adapter_uhdf_test_sbuf",
      "//drivers/adapter/uhdf/test/unittest/osal:hdf_adapter_uhdf_test_osal",
      "//drivers/adapter/uhdf/test/unittest/osal:hdf_adapter_uhdf_test_osal_posix",
    ]
    if (board_name == "hi3516dv300" || board_name == "hispark_taurus" ||
        board_name == "hi3518ev300" || board_name == "hispark_aries") {
      deps += [ "//drivers/adapter/uhdf/test/unittest/platform:hdf_adapter_uhdf_test_platform" ]
    }
  }
  features = []
}
