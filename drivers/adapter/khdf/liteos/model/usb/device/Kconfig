config DRIVERS_HDF_USB_DDK_DEVICE
    bool "Enable HDF LiteOS USB DDK Device driver"
    default n
    depends on DRIVERS_HDF && DRIVERS_USB && DRIVERS_HDF_USB_COMPOSITE
    help
        Answer Y to choice HDF LiteOS USB DDK Device driver.

config DRIVERS_HDF_USB_COMPOSITE
    bool "Enable HDF usb composite driver framework"
    default n
    depends on DRIVERS_HDF && DRIVERS_USB
    help
      Answer Y to enable HDF usb composite driver framework.

config DRIVERS_USB3_DEVICE_CONTROLLER
    bool "Enable HDF usb3 controller driver"
    default n
    depends on DRIVERS_HDF && DRIVERS_USB
    help
      Answer Y to enable HDF usb controller driver.

config DRIVERS_HDF_USB_DEVICE_DEMO_TEST
    bool "Enable HDF usb device driver demo test"
    default n
    depends on DRIVERS_HDF && DRIVERS_USB && DRIVERS_HDF_USB_DDK_DEVICE
    help
      Answer Y to enable HDF usb device driver demo.
