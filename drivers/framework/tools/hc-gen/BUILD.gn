action("build_hc_gen") {
  script = "/usr/bin/env"
  if (defined(ohos_lite)) {
    script = "//build/lite/run_shell_cmd.py"
  }
  outputs = [ "$target_out_dir/hc-gen" ]
  args = [
    "make",
    "-j",
    "-C",
    rebase_path("."),
    "BUILD_DIR=" + rebase_path(target_out_dir),
  ]
}
