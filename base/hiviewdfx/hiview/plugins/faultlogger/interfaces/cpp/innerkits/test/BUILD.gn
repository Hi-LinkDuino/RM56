import("//build/test.gni")
module_output_path = "hiviewdfx/faultlogger/"

config("hiview_faultlogger_interface_test_config") {
  visibility = [ ":*" ]

  include_dirs = [
    ".",
    "common/moduletest",
    "$hiview_faultlogger/test/common",
  ]
}

ohos_moduletest("FaultloggerNativeInterfaceTest") {
  module_out_path = module_output_path

  configs = [ ":hiview_faultlogger_interface_test_config" ]

  sources = [
    "$hiview_faultlogger/test/common/faultlogger_client_test.cpp",
    "common/moduletest/faultlogger_native_interface_test.cpp",
  ]

  deps = [
    "$hiview_base:hiviewbase",
    "$hiview_faultlogger:libfaultlogger",
    "//third_party/googletest:gtest_main",
  ]
}
