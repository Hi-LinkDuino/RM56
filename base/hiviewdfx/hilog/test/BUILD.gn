import("//build/test.gni")

module_output_path = "hiviewdfx/hilog"

config("module_private_config") {
  visibility = [ ":*" ]
}

ohos_moduletest("HiLogNDKTest") {
  module_out_path = module_output_path

  sources = [
    "moduletest/common/hilog_base_ndk_test.cpp",
    "moduletest/common/hilog_ndk_test.cpp",
  ]

  configs = [ ":module_private_config" ]

  deps = [ "//third_party/googletest:gtest_main" ]

  external_deps = [
    "hilog_native:libhilog",
    "hilog_native:libhilog_base",
  ]

  include_dirs = [
    "//base/hiviewdfx/hilog/interfaces/native/innerkits/include",
    "//base/hiviewdfx/hilog/frameworks/native/include",
  ]
}

ohos_moduletest("HiLogAdapterTest") {
  module_out_path = module_output_path

  sources = [ "moduletest/common/adapter_test.cpp" ]

  configs = [ ":module_private_config" ]

  deps = [
    "//base/hiviewdfx/hilog/adapter:libhilog_os_adapter",
    "//third_party/googletest:gtest_main",
  ]

  external_deps = [ "hilog_native:libhilog" ]

  include_dirs = [ "//base/hiviewdfx/hilog/adapter" ]
}
