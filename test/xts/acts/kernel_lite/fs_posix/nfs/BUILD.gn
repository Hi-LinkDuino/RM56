import("//test/xts/tools/lite/build/suite_lite.gni")

hcpptest_suite("ActsNFSTest") {
  suite_name = "acts"
  sources = [
    "../src/FileSystemTest.cpp",
    "../src/FsDirentTest.cpp",
    "../src/FsFcntlTest.cpp",
    "../src/FsOtherTest.cpp",
    "../src/FsStatTest.cpp",
    "../src/FsStdioTest.cpp",
    "../src/FsStdlibTest.cpp",
    "../src/FsUnistdTest.cpp",
  ]
  include_dirs = [
    "//test/xts/tools/hctest/include",
    "//test/xts/acts/kernel_lite/utils",
  ]
  deps = [
    "//test/xts/acts/kernel_lite/utils:libfs",
    "//test/xts/acts/kernel_lite/utils:libutils",
  ]
  cflags_cc = [
    "-Wno-write-strings",
    "-Wno-sign-compare",
  ]
  defines = [
    "LITE_FS_NFS",
    "TOP_DIR=\"/test_root/kernel\"",

    # mount point '/test_root' and '/test_root/kernel' are both allowed
    "TOP_DIR_MOUNT_INFO=\"/test_root/kernel nfs\"",
  ]
}
