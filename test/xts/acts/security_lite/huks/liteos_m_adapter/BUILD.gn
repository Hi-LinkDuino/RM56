import("//base/security/huks/build/config.gni")
import("//test/xts/tools/lite/build/suite_lite.gni")

hctest_suite("ActsHuksHalFunctionTest") {
  suite_name = "acts"
  sources = [
    "hks_aes_test.c",
    "hks_agreement_test.c",
    "hks_bn_exp_mod_test.c",
    "hks_cipher_test.c",
    "hks_curve25519_test.c",
    "hks_delete_test.c",
    "hks_derive_test.c",
    "hks_exist_test.c",
    "hks_generate_key_test.c",
    "hks_generate_random_test.c",
    "hks_hash_test.c",
    "hks_mac_test.c",
    "hks_modify_key_test.c",
    "hks_others_test.c",
    "hks_safe_cipher_key_test.c",
    "hks_safe_compare_key_test.c",
  ]
  include_dirs = [
    "//base/security/huks/interfaces/innerkits/huks_standard/main/include",
    "//base/iot_hardware/peripheral/interfaces/kits",
    "../common/include",
  ]

  deps = [ "//test/xts/acts/security_lite/huks/common:huks_test_common" ]

  cflags = [
    "-D_CUT_ED25519_",
    "-D_CUT_LOG_",
  ]
  if (disable_authenticate == true) {
    cflags += [ "-D_CUT_AUTHENTICATE_" ]
  }
}
