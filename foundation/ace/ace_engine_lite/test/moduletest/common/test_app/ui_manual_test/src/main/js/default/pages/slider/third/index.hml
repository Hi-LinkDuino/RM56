<stack style="width: 454px;height: 454px;margin: 20px;opacity: 0.5;">
    <text style="left:150px;top:20px;width:150px;height:40px">slider</text>
    <slider
        class="sliderStyle"
        min="100"
        max="200"
        value="{{dynamicValue}}"
        onclick="clickSlider"
        onchange="valueChange"
    />
    <text style="left:150px;top:60px;width:256px;height:50px">{{sliderValue}}</text>
    <slider
        class="verticalSliderStyle"
        min="100"
        max="200"
        value="200"
        onclick="clickVerticalSlider"
        onchange="verticalValueChange"
    />
    <text style="left:150px;top:150px;width:256px;height:50px"
        >{{verticalSliderValue}}</text
    >
    <image
        src="common/nextRow.png"
        style="left:400px;top:227px;width:30px;height:42px"
        onclick="nextPage"
    />
</stack>