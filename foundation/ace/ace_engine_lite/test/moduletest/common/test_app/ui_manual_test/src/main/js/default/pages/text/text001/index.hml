<stack class="container">
  <text class="title">
     text
  </text>
<div id="show" class="showBoxDiv">
      <text  style="top:20px;
                  left:100px;
                  width:200px;
                  height:60px;
                  padding-left:2px;
                  border-left-width:2px;
                  border-left-color:0x8a2be2;
                  display:flex;
                  margin-left:2px;
                  margin-left:2px;
                  margin-right:2px;
                  margin-top:2px;
                  margin-bottom:2px;

                  color:{{color}};
                  font-size:{{fontsize}};
                  letter-spacing:{{letterspacing}};
                  text-align:{{textalign}};
                  text-overflow:{{textoverflow}};
                  font-family:{{fontfamily}};
                 "
      >
      this is text
      </text>
</div>
<div id="outline" class="outlineBox">
  <input type="button" class="specialBtn" value="color" @click="onClickBtncolor"/>
  <input type="button" class="specialBtn" value="fSize" @click="onClickBtnFontsize"/>
  <input type="button" class="specialBtn" value="lSpac+1" @click="onClickBtnLetterspacingAdd"/>
  <input type="button" class="specialBtn" value="lSpac-1" @click="onClickBtnLetterspacingSub"/>
  <input type="button" class="specialBtn" value="tAlign" @click="onClickBtnTextalign"/>
  <input type="button" class="specialBtn" value="overFlow" @click="onClickBtnTextoverflow"/>
  <input type="button" value="首页" @click="backMain"/>
  <input type="button" value="下页" @click="changeNext"/>
</div>

</stack>