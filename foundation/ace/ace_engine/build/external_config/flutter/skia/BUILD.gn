        "$ace_flutter_engine_root/freetype:ace_libfreetype2",
        "$ace_flutter_engine_root/harfbuzz:ace_libharfbuzz_$platform",
        "$ace_flutter_engine_root/icu:ace_libicu_$platform",
        "$ace_flutter_engine_root/libjpeg:ace_libjpeg",
