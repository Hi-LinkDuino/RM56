      sources = [ "$flutter_root/skia/src/utils/SkParsePath.cpp" ]
    } else {
      public_configs = [
        ":skia_config",
        ":harfbuzz_config",
      ]

      deps = [
        ":ace_fontmgr_$platform",
        ":ace_gif",
        ":ace_gpu_$platform",
