import("//foundation/communication/dsoftbus/dsoftbus.gni")

if (defined(ohos_lite)) {
  import("//build/lite/config/component/lite_component.gni")

  executable("disc_coap_test") {
    sources = [ "disc_coap_test.c" ]
    include_dirs = [
      "${dsoftbus_root_path}/core/discovery/coap/include",
      "${dsoftbus_root_path}/core/common/include",
      "$dsoftbus_root_path/core/discovery/interface",
      "$dsoftbus_root_path/interfaces/kits/discovery",
      "//third_party/bounds_checking_function/include",
    ]
    cflags = [
      "-Wall",
      "-std=c99",
    ]
    ldflags = [
      "-lrt",
      "-lpthread",
      "-Wl,-rpath-link=$ohos_root_path/$root_out_dir",
    ]
    deps = [
      "${dsoftbus_root_path}/core/discovery/coap:dsoftbus_disc_coap",
      "//third_party/bounds_checking_function:libsec_shared",
    ]
  }
} else {
  import("//build/ohos.gni")

  ohos_executable("disc_coap_test") {
    install_enable = true
    sources = [ "disc_coap_test.c" ]
    include_dirs = [
      "${dsoftbus_root_path}/core/discovery/coap/include",
      "${dsoftbus_root_path}/core/common/include",
      "$dsoftbus_root_path/core/discovery/interface",
      "$dsoftbus_root_path/interfaces/kits/discovery",
      "//third_party/bounds_checking_function/include",
    ]
    cflags = [
      "-Wall",
      "-std=c99",
    ]
    deps = [ "$dsoftbus_root_path/core/frame/standard/server:softbus_server" ]
    part_name = "softbus_L2"
    subsystem_name = "communication"
  }
}
