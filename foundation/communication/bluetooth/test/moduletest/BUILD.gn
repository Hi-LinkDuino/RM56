import("//build/test.gni")

module_output_path = "bluetooth/server_test"

###############################################################################
#1. intent(c++) get/set test without transport

config("module_private_config") {
  visibility = [ ":*" ]
  cflags = []
  if (target_cpu == "arm") {
    cflags += [ "-DBINDER_IPC_32BIT" ]
  }
  include_dirs = [
    "mock/include",
    "//third_party/json/include",
    "//third_party/bounds_checking_function/include",
    "//utils/system/safwk/native/include",
    "//foundation/communication/bluetooth/services/bluetooth/service/src/common",
    "//foundation/communication/bluetooth/services/bluetooth/service/src/",
    "//foundation/communication/bluetooth/services/bluetooth/service/src/base",
  ]
  defines = [
    "BTFW_LOG_TAG = \"bluetooth_test\"",
    "BTFW_LOG_DOMAIN = 0xD000103",
  ]
}

ohos_moduletest("btsvr_module_test") {
  module_out_path = module_output_path
  sources = [ "moduletest/hosttest/host_srv_module_test.cpp" ]

  configs = [ ":module_private_config" ]

  deps = [
    "//base/global/resource_management/frameworks/resmgr:global_resmgr",
    "//foundation/communication/bluetooth/services/bluetooth/server:bluetooth_server",
    "//foundation/communication/bluetooth/services/bluetooth/service:btservice",
    "//third_party/bounds_checking_function:libsec_shared",
    "//third_party/googletest:gmock_main",
    "//third_party/googletest:gtest_main",
  ]

  external_deps = [
    "c_utils:utils",
    "hiviewdfx_hilog_native:libhilog",
    "ipc:ipc_core",
  ]
}

################################################################################
group("moduletest") {
  testonly = true

  deps = []

  if (is_phone_product) {
    deps += [ ":btsvr_module_test" ]
  }
}
