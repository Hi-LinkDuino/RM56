cur_dir := $(dir $(lastword $(MAKEFILE_LIST)))

obj-y := $(patsubst $(cur_dir)%,%,$(wildcard $(cur_dir)*.c $(cur_dir)*.S))
obj-y := $(obj-y:.c=.o)
obj-y := $(obj-y:.cpp=.o)
obj-y := $(obj-y:.S=.o)

ccflags-y := -Iplatform/hal  \
             -Iutils/libc/inc

ifeq ($(SECURE_BOOT),1)
ccflags-y += -DSECURE_BOOT
endif
